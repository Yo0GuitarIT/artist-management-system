generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PatientBasicInfo {
  id                    Int      @id @default(autoincrement())
  mrn                   String   @unique // 病歷號
  ptName                String   // 病人姓名
  ptNameFull            String?  // 病人全名
  birthDate             DateTime? // 出生日期
  gender                String?  // 性別代碼
  genderName            String?  // 性別名稱
  maritalStatus         String?  // 婚姻狀況代碼
  maritalStatusName     String?  // 婚姻狀況名稱
  email                 String?  // 電子郵件
  educationNo           String?  // 教育程度代碼
  educationNoName       String?  // 教育程度名稱
  lowIncome             String?  // 低收入戶代碼
  lowIncomeName         String?  // 低收入戶名稱
  nationalityCode       String?  // 國籍代碼
  nationalityCodeName   String?  // 國籍名稱
  mainLang              String?  // 主要語言代碼
  mainLangName          String?  // 主要語言名稱
  religion              String?  // 宗教代碼
  religionName          String?  // 宗教名稱
  idType                String?  // 身份證類型代碼
  idTypeName            String?  // 身份證類型名稱
  idNo                  String?  // 身份證號
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")

  // 關聯到病人明細資料
  patientDetail         PatientDetail?

  @@map("patient_basic_info")
}

// 病人明細資料表
model PatientDetail {
  id                    Int      @id @default(autoincrement())
  mrn                   String   @unique // 病歷號 (外鍵)
  
  // 基本資料區塊
  ptName                String?  // 病人姓名
  fullName              String?  // 全名
  birthDate             DateTime? // 出生日期
  biologicalGender      String?  // 生理性別代號
  maritalStatus         String?  // 婚姻狀況代號
  bloodTypeABO          String?  // ABO血型代號
  bloodTypeRH           String?  // RH血型代號
  email                 String?  // 電子郵件
  educationLevel        String?  // 教育程度代號
  incomeLevel           String?  // 低/中收入戶代號
  
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")

  // 關聯到基本資料表
  patientBasicInfo      PatientBasicInfo @relation(fields: [mrn], references: [mrn], onDelete: Cascade)
  
  // 關聯到國籍資料
  nationalities         PatientNationality[]

  @@map("patient_detail")
}

// 病人國籍資料表
model PatientNationality {
  id                    Int      @id @default(autoincrement())
  mrn                   String   // 病歷號 (外鍵)
  nationalityCode       String   // 國籍代碼
  isPrimary             Boolean  @default(false) // 是否為主要國籍
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")

  // 關聯到病人明細資料
  patientDetail         PatientDetail @relation(fields: [mrn], references: [mrn], onDelete: Cascade)

  @@map("patient_nationality")
}

// 代號選項對照表
model CodeOption {
  id                    Int      @id @default(autoincrement())
  category              String   // 分類 (例如: gender, marital, bloodType, education, income)
  code                  String   // 代號
  name                  String   // 選項名稱
  description           String?  // 描述
  displayOrder          Int?     // 顯示順序
  isActive              Boolean  @default(true) // 是否啟用
  createdAt             DateTime @default(now()) @map("created_at")
  updatedAt             DateTime @updatedAt @map("updated_at")

  @@unique([category, code])
  @@map("code_option")
}
